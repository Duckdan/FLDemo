<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="100px"/>
            <gradient android:angle="90"
                      android:startColor="@color/start_shadow"
                      android:endColor="@color/end_shadow"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape
            android:shape="rectangle">
            <corners android:radius="100px"/>
            <solid android:color="@color/athemeColor"/>

        </shape>
    </item>


</layer-list>